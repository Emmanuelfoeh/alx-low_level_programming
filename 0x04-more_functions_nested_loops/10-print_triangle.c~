#include "holberton.h"
/**
* print_triangle - prints a triangle
* @a: takes in a integer for size of triangle
*/
void print_triangle(int a)
{
int i,j , k;

	if (a <= 0)
		_putchar('\n');
for (i = 0; i < a; i++)
{
for (j = a - i; j > 1; j--)
_putchar(' ');
for (k = i + j; k >= 1; k--)
_putchar('#');
_putchar('\n');
}
}
